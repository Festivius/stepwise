{
  "name": "stepwise-studio",
  "version": "1.3.0",
  "description": "Dance video player with precision controls - Master your moves with looping, speed control, and mirroring",
  "main": "main.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "electron": "electron .",
    "electron-dev": "set NODE_ENV=development && electron .",
    "electron-dev-unix": "NODE_ENV=development electron .",
    "electron-pack": "electron-builder",
    "dist": "electron-builder --publish=always",
    "dist-win": "electron-builder --win",
    "dist-win-x64": "electron-builder --win --x64",
    "dist-win-ia32": "electron-builder --win --ia32",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "test": "node run-tests.js",
    "test:server": "node test-server.js",
    "debug": "node debug-server.js",
    "pack": "electron-builder --dir",
    "pack-win": "electron-builder --dir --win",
    "postinstall": "echo 'yt-dlp-wrap will auto-download binaries on first use'",
    "setup-binaries": "node setup-binaries.js",
    "check-windows": "node check-windows.js"
  },
  "keywords": [
    "dance",
    "video",
    "player",
    "youtube",
    "tutorial",
    "learning",
    "electron",
    "desktop",
    "windows"
  ],
  "author": "Jesse Ma",
  "homepage": "https://github.com/festivius/stepwise",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "electron-updater": "^6.1.0",
    "electron-window-state": "^5.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/festivius/stepwise.git"
  },
  "build": {
    "appId": "com.festivius.stepwisestudio",
    "productName": "Stepwise Studio",
    "copyright": "Copyright Â© 2025 Stepwise Studio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "binaries/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "!node_modules/.cache/**/*",
      "!dist/**/*",
      "!.env"
    ],
    "extraResources": [
      {
        "from": "binaries",
        "to": "binaries",
        "filter": "**/*"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "festivius",
      "repo": "stepwise",
      "releaseType": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/stepwise-icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "publisherName": "Stepwise Studio",
      "verifyUpdateCodeSignature": false,
      "extraMetadata": {
        "main": "main.js"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Stepwise Studio",
      "include": "build/installer.nsh",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "installerIcon": "assets/stepwise-icon.ico",
      "uninstallerIcon": "assets/stepwise-icon.ico",
      "installerHeaderIcon": "assets/stepwise-icon.ico",
      "license": "LICENSE",
      "language": "1033"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.entertainment",
      "icon": "assets/stepwise-icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "AudioVideo",
      "icon": "assets/stepwise-icon.png"
    },
    "fileAssociations": [
      {
        "ext": "mp4",
        "name": "Video File",
        "description": "MP4 Video File",
        "icon": "assets/stepwise-icon.ico",
        "role": "Viewer"
      }
    ],
    "protocols": [
      {
        "name": "stepwise-studio",
        "schemes": [
          "stepwise"
        ]
      }
    ]
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ]
}