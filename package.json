{
  "name": "stepwise-studio",
  "version": "3.0.0",
  "description": "Dance video player with precision controls - Master your moves with looping, speed control, and mirroring",
  "main": "main.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "electron": "electron .",
    "electron-dev": "set NODE_ENV=development && electron .",
    "electron-dev-unix": "NODE_ENV=development electron .",
    "electron-pack": "electron-builder",
    "dist": "electron-builder --publish=always",
    "dist-win": "electron-builder --win",
    "dist-win-x64": "electron-builder --win --x64",
    "dist-win-ia32": "electron-builder --win --ia32",
    "test": "node run-tests.js",
    "test:server": "node test-server.js",
    "debug": "node debug-server.js",
    "pack": "electron-builder --dir",
    "pack-win": "electron-builder --dir --win",
    "setup-binaries": "node setup-binaries.js",
    "check-windows": "node check-windows.js",
    "setup-plugins": "node scripts/setup-plugins.js",
    "setup-bgutil": "node scripts/setup-bgutil.js",
    "setup-bgutil-docker": "node scripts/setup-bgutil.js --docker",
    "setup-bgutil-manual": "node scripts/setup-bgutil.js --manual",
    "test-bgutil": "node scripts/setup-bgutil.js --test",
    "bgutil-status": "node scripts/setup-bgutil.js --status",
    "start-bgutil": "cd ~/bgutil-ytdlp-pot-provider/server && node build/main.js",
    "postinstall": "node scripts/setup-plugins.js",
    "prebuild": "node scripts/bundle-bgutil-embedded.js",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "setup-dev": "npm install && npm run prebuild",
    "verify-setup": "node scripts/verify-embedded-setup.js",
    "test-setup": "node scripts/verify-embedded-setup.js"
  },
  "keywords": [
    "dance",
    "video",
    "player",
    "youtube",
    "tutorial",
    "learning",
    "electron",
    "desktop",
    "windows"
  ],
  "author": "Jesse Ma",
  "homepage": "https://github.com/festivius/stepwise",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "electron-updater": "^6.1.0",
    "electron-window-state": "^5.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/festivius/stepwise.git"
  },
  "build": {
    "appId": "com.festivius.stepwisestudio",
    "productName": "Stepwise Studio",
    "copyright": "Copyright Â© 2025 Stepwise Studio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "binaries/**/*",
      "bundled-plugins/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "!node_modules/.cache/**/*",
      "!dist/**/*",
      "!.env",
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "binaries",
        "to": "binaries",
        "filter": "**/*"
      },
      {
        "from": "bundled-plugins",
        "to": "bundled-plugins",
        "filter": "**/*"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "festivius",
      "repo": "stepwise",
      "releaseType": "release"
    },
    "extraMetadata": {
      "main": "main.js"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Stepwise Studio",
      "include": "build/installer.nsh",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "installerIcon": "assets/stepwise-icon.ico",
      "uninstallerIcon": "assets/stepwise-icon.ico",
      "installerHeaderIcon": "assets/stepwise-icon.ico",
      "license": "LICENSE",
      "language": "1033"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "category": "public.app-category.lifestyle",
      "icon": "assets/stepwise-icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/stepwise-icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/stepwise-icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "fileAssociations": [
      {
        "ext": "mp4",
        "name": "Video File",
        "description": "MP4 Video File",
        "icon": "assets/stepwise-icon.ico",
        "role": "Viewer"
      }
    ],
    "protocols": [
      {
        "name": "stepwise-studio",
        "schemes": [
          "stepwise"
        ]
      }
    ]
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ]
}
