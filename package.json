{
  "name": "stepwise-studio",
  "version": "1.0.0",
  "description": "Dance video player with precision controls - Master your moves with looping, speed control, and mirroring",
  "main": "main.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "electron-pack": "electron-builder",
    "dist": "electron-builder --publish=never",
    "build": "electron-builder",
    "publish": "electron-builder --publish=always",
    "test": "node run-tests.js",
    "test:server": "node test-server.js",
    "debug": "node debug-server.js",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "dance",
    "video",
    "player",
    "youtube",
    "tutorial",
    "learning",
    "electron",
    "desktop"
  ],
  "author": "Jesse Ma",
  "homepage": "https://github.com/your-username/stepwise",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "electron-updater": "^6.1.0",
    "electron-window-state": "^5.0.3",
    "express": "^4.18.2",
    "youtube-dl-exec": "^3.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/stepwise.git"
  },
  "build": {
    "appId": "com.yourcompany.stepwisestudio",
    "productName": "Stepwise Studio",
    "copyright": "Copyright Â© 2025 Stepwise Studio",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "Festivius",
      "repo": "stepwise",
      "releaseType": "draft"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "main.js",
      "preload.js",
      "menu.js",
      "package.json",
      "!node_modules/.cache/**/*",
      "!dist/**/*",
      "!.env"
    ],
    "extraFiles": [
      {
        "from": "node_modules/youtube-dl-exec/bin",
        "to": "Resources/bin",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/stepwise-icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.entertainment",
      "icon": "assets/stepwise-icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "AudioVideo",
      "icon": "assets/stepwise-icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}